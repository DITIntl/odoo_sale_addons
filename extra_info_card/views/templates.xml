<odoo>
    <data>
    <!-- Fully replace the extra info template -->
    <template id="website_sale.extra_info" name="Checkout Extra Info">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container oe_website_sale">
                    <t t-call="website_sale.wizard_checkout">
                        <t t-set="step" t-value="30" />
                    </t>
                    <h1 class="mb32">Personalised Card</h1>
                </div>
                <div class="oe_structure">
                    <form action="/website_form/" method="post" class="s_website_form form-horizontal container-fluid mt32" enctype="multipart/form-data" data-force_action="shop.sale.order" data-model_name="sale.order" data-success_page="/shop/payment">
                        <div class="form-group form-field o_website_form_custom">
                            <div class="col-md-3 col-sm-4 text-right">
                                <label class="control-label" for="x_to">
                                  A Posy For
                                </label>
                            </div>
                            <div class="col-md-7 col-sm-8">
                                <input type="text" class="form-control o_website_form_input" name="x_to"/>
                            </div>
                        </div>
                        <div class="form-group form-field o_website_form_custom">
                            <div class="col-md-3 col-sm-4 text-right">
                                <label class="control-label" for="x_message">Message</label>
                            </div>
                            <div class="col-md-7 col-sm-8">
                                <textarea class="form-control o_website_form_input" name="x_message" />
                            </div>
                        </div>
                        <div class="form-group form-field o_website_form_custom">
                            <div class="col-md-3 col-sm-4 text-right">
                                <label class="control-label" for="x_from">
                                  From
                                </label>
                            </div>
                            <div class="col-md-7 col-sm-8">
                                <input type="text" class="form-control o_website_form_input" name="x_from"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                                <span class="btn btn-primary pull-right o_website_form_send o_default_snippet_text">
                                    <span>Next </span><span class="fa fa-long-arrow-right" />
                                </span>
                                <span id="o_website_form_result" class="text-danger ml8" />
                            </div>
                        </div>
                    </form>
                    <!--
                        <t t-set="website_sale_order" t-value="website.sale_get_order()" />
                        <script>
                            $("input[name='x_to']").val(_.unescape('<t t-esc="escape(website_sale_order.x_to or '') or ''"/>'));
                        </script>
                    -->
                </div>
            </div>
        </t>
    </template>
    
    </data>
</odoo>